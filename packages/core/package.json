{
  "name": "@theia/core",
  "version": "0.1.0",
  "description": "Theia is a cloud & desktop IDE framework implemented in TypeScript.",
  "dependencies": {
    "@phosphor/widgets": "^0.1.7",
    "@types/body-parser": "^1.16.4",
    "@types/bunyan": "^1.8.0",
    "@types/express": "^4.0.36",
    "@types/ws": "^3.0.2",
    "@types/yargs": "^8.0.1",
    "body-parser": "^1.17.2",
    "bunyan": "^1.8.10",
    "electron": "^1.6.11",
    "express": "^4.15.3",
    "font-awesome": "^4.7.0",
    "inversify": "^4.2.0",
    "reconnecting-websocket": "^3.0.7",
    "reflect-metadata": "^0.1.10",
    "requirejs": "^2.3.3",
    "vscode-uri": "^1.0.1",
    "vscode-ws-jsonrpc": "0.0.1-alpha.4",
    "ws": "^3.0.0",
    "yargs": "^8.0.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "theiaExtensions": [
    {
      "frontend": "lib/browser/menu/browser-menu-module",
      "frontendElectron": "lib/electron-browser/menu/electron-menu-module"
    },
    {
      "frontend": "lib/browser/clipboard/browser-clipboard-module",
      "frontendElectron": "lib/electron-browser/clipboard/electron-clipboard-module"
    }
  ],
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/theia-ide/theia.git"
  },
  "bugs": {
    "url": "https://github.com/theia-ide/theia/issues"
  },
  "homepage": "https://github.com/theia-ide/theia",
  "files": [
    "lib",
    "src"
  ],
  "scripts": {
    "clean": "yarn run compile:clean && yarn run test:clean",
    "build": "yarn run compile && yarn run lint",
    "compile": "tsc -p compile.tsconfig.json",
    "compile:clean": "rimraf lib",
    "lint": "tslint -c ../tslint.json --project compile.tsconfig.json",
    "watch": "tsc -w -p compile.tsconfig.json",
    "test": "nyc mocha --opts ../mocha.opts src/**/*.spec.ts",
    "test:watch": "mocha -w --opts ../mocha.opts src/**/*.spec.ts",
    "test:clean": "rimraf .nyc_output && rimraf coverage"
  },
  "devDependencies": {
    "@types/chai": "^4.0.1",
    "@types/chai-as-promised": "0.0.31",
    "@types/mocha": "^2.2.41",
    "chai": "^4.1.0",
    "chai-as-promised": "^7.1.1",
    "concurrently": "^3.5.0",
    "mocha": "^3.4.2",
    "nyc": "^11.0.3",
    "rimraf": "^2.6.1",
    "ts-node": "^3.2.0",
    "tslint": "^4.5.1",
    "typescript": "^2.4.1"
  },
  "nyc": {
    "extends": "../nyc.json"
  }
}
