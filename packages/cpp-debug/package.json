{
  "name": "@theia/cpp-debug",
  "version": "0.3.15",
  "description": "Theia - Cpp Debug Extension",
  "dependencies": {
    "@theia/core": "^0.3.15",
    "@theia/editor": "^0.3.15",
    "@theia/filesystem": "^0.3.15",
    "@theia/languages": "^0.3.15",
    "@theia/monaco": "^0.3.15",
    "@theia/preferences": "^0.3.15",
    "@theia/process": "^0.3.15"
  },
  "publishConfig": {
    "access": "public"
  },
  "theiaExtensions": [{
    "backend": "lib/node/cpp-debug-backend-module"
  }],
  "keywords": [
    "theia-extension"
  ],
  "license": "EPL-2.0 OR GPL-2.0 WITH Classpath-exception-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/theia-ide/theia.git"
  },

  "bugs": {
    "url": "https://github.com/theia-ide/theia/issues"
  },
  "homepage": "https://github.com/theia-ide/theia",
  "files": [
    "data",
    "lib",
    "src"
  ],
  "scripts": {
    "prepare": "yarn run clean && yarn run build",
    "clean": "theiaext clean",
    "build": "concurrently -n download,build -c red,blue \"node ./scripts/download-code-debug.js\" \"theiaext build\"",
    "watch": "theiaext watch",
    "test": "theiaext test",
    "docs": "theiaext docs"
  },
  "devDependencies": {
    "@theia/ext-scripts": "^0.3.15"
  },
  "nyc": {
    "extends": "../../configs/nyc.json"
  },
  "debugAdapter": {
    "downloadUrl": "https://github.com/marechal-p/code-debug/releases/download/v0.22.0/code-debug.tar.gz",
    "dir": "lib/adapter"
  }
}
