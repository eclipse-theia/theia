{
  "name": "@theia/java",
  "version": "0.3.18",
  "description": "Theia - Java Extension",
  "dependencies": {
    "@theia/core": "^0.3.18",
    "@theia/editor": "^0.3.18",
    "@theia/languages": "^0.3.18",
    "@theia/monaco": "^0.3.18",
    "@types/glob": "^5.0.30",
    "@types/tar": "4.0.0",
    "glob": "^7.1.2",
