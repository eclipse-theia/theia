    "sha1": "^1.1.1",
    "tar": "^4.0.0"
  },
  "devDependencies": {
    "@theia/ext-scripts": "^0.3.18"
  },
  "scripts": {
    "prepare": "yarn run clean && yarn run build",
    "clean": "theiaext clean",
    "postinstall": "node ./scripts/download-jdt-ls.js",
